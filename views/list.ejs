<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(singleItem){ %>
        <form  action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkBox" value=<%=singleItem._id %> onChange="this.form.submit()" >
            <p><%=  singleItem.name  %></p>
          </div>
          <input type="hidden" name="listHeading" value=<%=listTitle%> >
        </form>
    <%  }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%=listTitle%> >+</button>
      </form>
  </div>

<%- include("footer") -%>
